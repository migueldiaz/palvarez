var bpazucar = document.getElementById("bpazucar");
var bperruna = document.getElementById("bperruna");
var bemanadilla = document.getElementById("bemanadilla");
var bgalleta = document.getElementById("bgalleta");


// Get the <span> element that closes the modal
var xpmiel = document.getElementsByClassName("xpmiel")[0];
var xpazucar = document.getElementsByClassName("xpazucar")[0];
var xperruna = document.getElementsByClassName("xperruna")[0];
var xempanadilla = document.getElementsByClassName("xempanadilla")[0];
