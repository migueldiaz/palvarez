
<%= form_for @email, :html => {:class => 'form-horizontal'}, :url => {:action => 'enviaMail'} do |f| %>
 <% if @email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@email.errors.count, "error") %> impidieron que se enviara el mensaje</h2>

      <ul>
      <% @email.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="form-group">
		<label class="control-label col-sm-2" for="email">Nombre:</label>
		<div class="col-sm-10">
			<%= f.text_field :nombre,:class=>"form-control",:placeholder=>"Nombre" %>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="email">Email:</label>
		<div class="col-sm-10">
			<%= f.text_field :email,:class=>"form-control",:placeholder=>"Email" %>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="pwd">Telefono:</label>
		<div class="col-sm-10"> 
			<%= f.text_field :telefono,:class=>"form-control",:placeholder=>"Telefono" %>
		</div>
	</div>								 
	<div class="form-group">
		<label class="control-label col-sm-2" for="mensaje">Mensaje:</label>
		<div class="col-sm-10">
			<%= f.text_area :mensaje,:class=>"form-control",:rows=>"5",:placeholder=>"¿En qué podemos ayudarte?" %>
		</div>
	</div>								  
	<div class="form-group"> 
		<div class="col-sm-offset-2 offset-1">
			<!--%= f.submit 'Enviar',:class=>'btn btn-default'%>-->
			<button type="submit" class="btn btn-primary">Enviar</button>
		</div>
	</div>
<% end %>
